# Variáveis de Ambiente para Conexão com Banco de Dados
# Escolha um: 'firebase', 'mongodb', 'indexeddb'
NEXT_PUBLIC_DATABASE_TYPE=firebase

# Se usar 'mongodb', preencha estas variáveis
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB="finwise"

# Chaves de API para provedores de IA (obrigatório para os respectivos provedores)
GEMINI_API_KEY="SUA_CHAVE_DE_API_DO_GEMINI_AQUI"
OPENAI_API_KEY="SUA_CHAVE_DE_API_DO_OPENAI_AQUI"

# Chaves de API para o Stripe (obrigatório para pagamentos)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="SUA_CHAVE_PUBLICAVEL_DO_STRIPE_AQUI"
STRIPE_SECRET_KEY="SUA_CHAVE_SECRETA_DO_STRIPE_AQUI"
STRIPE_WEBHOOK_SECRET="SEU_SEGREDO_DE_WEBHOOK_DO_STRIPE_AQUI"

# IDs de Preço dos Planos do Stripe
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO="SEU_ID_DE_PRECO_PRO_AQUI"
NEXT_PUBLIC_STRIPE_PRICE_ID_PLUS="SEU_ID_DE_PRECO_PLUS_AQUI"
NEXT_PUBLIC_STRIPE_PRICE_ID_INFINITY="SEU_ID_DE_PRECO_INFINITY_AQUI"

# URL base da sua aplicação (usada pelo Stripe para redirecionamentos)
NEXT_PUBLIC_APP_URL="http://localhost:9002"

# Configuração do Provedor de IA Padrão (FinWise AI)
# Escolha um: 'googleai', 'openai', 'ollama'
DEFAULT_AI_PROVIDER="googleai"
DEFAULT_OPENAI_MODEL="gpt-4o"
DEFAULT_OLLAMA_MODEL="llama3"
DEFAULT_OLLAMA_URL="http://127.0.0.1:11434"

# Credenciais do Firebase Admin (usado para funções de servidor)
# Geralmente configurado via variável de ambiente GOOGLE_APPLICATION_CREDENTIALS
# Não precisa definir no .env se estiver usando o método padrão
# FIREBASE_PROJECT_ID="seu-id-de-projeto"
# FIREBASE_CLIENT_EMAIL="seu-email-de-cliente"
# FIREBASE_PRIVATE_KEY="sua-chave-privada"
