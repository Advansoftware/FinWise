# Chaves do Stripe (obtenha em dashboard.stripe.com)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# IDs de Preço dos Planos do Stripe (crie seus produtos no Stripe)
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=
NEXT_PUBLIC_STRIPE_PRICE_ID_PLUS=
NEXT_PUBLIC_STRIPE_PRICE_ID_INFINITY=

# URL pública da sua aplicação (para redirecionamentos do Stripe)
NEXT_public_APP_URL=https://gastometria.com.br

# --- CONFIGURAÇÃO DA ARQUITETURA HEXAGONAL ---
# Defina o tipo de banco de dados e autenticação que será usado
# Valores possíveis: 'firebase' ou 'mongodb'
DATABASE_TYPE=firebase

# --- Configurações do Firebase (quando DATABASE_TYPE=firebase) ---
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Credenciais do Firebase (para acesso de Admin no servidor)
# Aponte para o local do seu arquivo de credenciais JSON
GOOGLE_APPLICATION_CREDENTIALS=./firebase-credentials.json

# --- Configurações do MongoDB (quando DATABASE_TYPE=mongodb) ---
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=gastometria

# --- Configuração do Banco de Dados (LEGACY - mantido para compatibilidade) ---
# Use 'firebase' ou 'mongodb'
NEXT_PUBLIC_DATABASE_TYPE=firebase

# --- Configuração do Provedor de Autenticação (LEGACY - mantido para compatibilidade) ---
# Use 'firebase' ou 'mongodb'  
NEXT_PUBLIC_AUTH_PROVIDER=firebase


# --- Configuração do Provedor de IA Padrão (Gastometria AI) ---
# O provedor padrão para a "Gastometria AI". Aceita 'openai', 'googleai', 'ollama'.
DEFAULT_AI_PROVIDER=googleai

# Chaves de API para os provedores (necessário apenas se for o provedor padrão)
# GEMINI_API_KEY é usado se DEFAULT_AI_PROVIDER=googleai
GEMINI_API_KEY=
# OPENAI_API_KEY é usado se DEFAULT_AI_PROVIDER=openai
OPENAI_API_KEY=

# Modelo a ser usado se DEFAULT_AI_PROVIDER=openai
DEFAULT_OPENAI_MODEL=gpt-4o

# Configuração se DEFAULT_AI_PROVIDER=ollama
DEFAULT_OLLAMA_MODEL=llama3
DEFAULT_OLLAMA_URL=http://127.0.0.1:11434
